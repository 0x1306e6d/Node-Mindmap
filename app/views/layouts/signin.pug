extends ../layout

append meta
    title Mindmap - Sign In

block body
    .container
        h1.text-center
            a(href="/") Mindmap
        .row
            .col-xs-offset-2.col-xs-8.col-sm-offset-3.col-sm-6.col-lg-offset-4.col-lg-4
                form(action="/auth/signin" method="POST")
                    .form-group
                        label(for="username") username
                        input.form-control(type="text" id="username" name="username")
                    .form-group
                        label(for="password") password
                        input.form-control(type="password" id="password" name="password")
                    button.btn.btn-default.btn-block(type="submit") Sign In
                a.btn.btn-default.btn-block(href="/auth/signup") Sign Up